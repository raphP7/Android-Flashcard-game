<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/fragmentNewValue"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/newDeckValueTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="newValueTxt"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="40sp" />


        <EditText
            android:id="@+id/newDeckValueEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="gone"
            android:nextFocusDown="@+id/newValueButton" />

        <Button
            android:id="@+id/newDeckValueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="newValueButton" />

        <ProgressBar
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:max="100"
            android:id="@+id/progressBar2"

            android:layout_height="30dp" />
    </LinearLayout>

</ScrollView>